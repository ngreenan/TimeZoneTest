<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView android:layout_width="20dp"
        android:layout_height="40dp"
        android:background="#555555"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/personColor" />

    <TextView android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/personColor"
        android:layout_toEndOf="@+id/personColor"
        android:layout_toLeftOf="@+id/personDetails"
        android:layout_toStartOf="@+id/personDetails"
        android:gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text=""
        android:textSize="24sp"
        android:textColor="#000000"
        android:id="@+id/personName"
        android:maxLines="1"
        android:minLines="1"
        android:ellipsize="end" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/personFlag"
        android:layout_toStartOf="@+id/personFlag"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text=""
        android:textSize="16sp"
        android:textColor="#000000"
        android:id="@+id/personDetails"
        android:maxLines="1"
        android:minLines="1" />

    <ImageView android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/personFlag"
        android:src="@drawable/unknown"
        android:contentDescription="@string/flagDesc"/>

</RelativeLayout>