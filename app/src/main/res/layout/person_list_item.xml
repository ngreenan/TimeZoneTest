<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView android:layout_width="30dp"
        android:layout_height="60dp"
        android:background="#555555"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/personColor"
        />

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/personColor"
        android:layout_toEndOf="@+id/personColor"
        android:layout_toLeftOf="@+id/personFlag"
        android:layout_toStartOf="@+id/personFlag"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="Nick Greenan"
        android:textSize="25dp"
        android:textColor="#000000"
        android:id="@+id/personName"/>

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#444444"
        android:text="this is some basic info"
        android:layout_toRightOf="@+id/personColor"
        android:layout_toEndOf="@+id/personColor"
        android:layout_toLeftOf="@+id/personFlag"
        android:layout_toStartOf="@+id/personFlag"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="0dp"
        android:layout_below="@+id/personName"
        android:id="@+id/personDetails"
        android:maxLines="1"
        android:minLines="1"
        android:ellipsize="end" />

    <ImageView android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/personFlag"
        android:src="@drawable/unknown" />


</RelativeLayout>